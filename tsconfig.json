{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022"
        ],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": [
        "index.ts",
        "lib/**/*.ts",
        "plugins/**/*.ts",
        "workers/**/*.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "sessions",
        "temp_conversions",
        "tmp"
    ]
}